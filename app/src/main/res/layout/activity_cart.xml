<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Controller.Cart">

    <ScrollView
        android:id="@+id/order_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cart_list"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/checkout_separator1"
                android:layout_below="@id/cart_list"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/cart_subtotal_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/checkout_separator1"/>
            <TextView
                android:id="@+id/cart_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/checkout_separator1"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/checkout_separator2"
                android:layout_below="@id/cart_subtotal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/process_fee_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Processing Fee:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/checkout_separator2"/>
            <TextView
                android:id="@+id/process_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/checkout_separator2"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/sales_tax_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sales Tax:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/process_fee"/>
            <TextView
                android:id="@+id/sales_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/process_fee"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/checkout_separator3"
                android:layout_below="@id/sales_tax_label"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/cart_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/checkout_separator3"/>
            <TextView
                android:id="@+id/cart_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/checkout_separator3"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/checkout_separator4"
                android:layout_below="@id/cart_items"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/cart_checkout"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkout_string"
                android:textStyle="bold"
                android:layout_below="@id/checkout_separator4"
                android:onClick="onCheckout"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>

